{
  "name": "storybook",
  "version": "1.0.0",
  "description": "Starter template to get up and running quickly with Svelte and Storybook",
  "private": true,
  "author": "Chromatic <https://chromatic.com/>",
  "repository": {
    "type": "git",
    "url": "https://github.com/chromaui/intro-storybook-svelte-template"
  },
  "bugs": {
    "url": "https://github.com/chromaui/intro-storybook-svelte-template/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "echo 'no build'",
    "test": "jest --watchAll",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "upload": "aws s3 sync storybook-static s3://anticrm-storybook --delete --acl public-read"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/svelte": "^6.1.11",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/svelte": "^3.0.3",
    "babel-loader": "^8.2.2",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "storybook-addon-themes": "^6.1.0",
    "svelte": "^3.31.2",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "~4.7.0",
    "@tsconfig/svelte": "~1.0.10",
    "css-loader": "~5.2.1",
    "style-loader": "~2.0.0",
    "sass-loader": "~10.1.1"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "@anticrm/status": "~0.4.0",
    "@anticrm/sparkling-controls": "~0.4.0",
    "@anticrm/sparkling-theme": "~0.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "jest-transform-svelte"
    },
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  }
}